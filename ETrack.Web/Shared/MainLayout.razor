@inherits LayoutComponentBase

<PageTitle>ETrack.Web</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <AuthorizeView>
            <NotAuthorized>
                <div class="top-row px-4">
                    <a href="/login">Login</a>
                    <a href="/register">Sign Up</a>
                </div>
            </NotAuthorized>
            <Authorized>
                <div class="top-row px-4">
                    <a href="/logout">Log Out</a>
                </div>
            </Authorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>