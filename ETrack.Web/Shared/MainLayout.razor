@inherits LayoutComponentBase

<RadzenComponents/>
<PageTitle>E-Track</PageTitle>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <AuthorizeView>
            <NotAuthorized>
                <div class="top-row px-4">
                    <a href="/login">
                        <span class="material-icons">login</span>
                    </a>
                </div>
            </NotAuthorized>
            <Authorized>
                <div class="top-row px-4">
                    <a href="/logout">
                        <span class="material-icons">logout</span>
                    </a>
                </div>
            </Authorized>
        </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>